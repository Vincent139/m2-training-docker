    <body>
        <referenceContainer name="sidebar.main">
            <block class="Correction\Formation_TP6\Block\Customer\Addresses" name="addresses" alias="customer.addresses" template="Correction_TP6::addresses.phtml" />
        </referenceContainer>
        <referenceContainer name="main">
            <block class="Correction\Formation_TP6\Block\Customer\Coordinates" name="coordinates" alias="customer.coordinates" template="Correction_TP6::coordinates.phtml" />
